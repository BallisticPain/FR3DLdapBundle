<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fr3d_ldap.ldap_driver.parameters" />
        <parameter key="fr3d_ldap.ldap_driver.protocol.version">3</parameter>
        <parameter key="fr3d_ldap.ldap_driver.zend.class">FR3D\LdapBundle\Driver\ZendLdapConnection</parameter>
        <parameter key="fr3d_ldap.ldap_driver.legacy.class">FR3D\LdapBundle\Driver\LegacyLdapConnection</parameter>
    </parameters>

    <services>

        <service id="fr3d_ldap.ldap_driver.zend.connection" class="Zend\Ldap\Ldap" public="false">
            <argument>%fr3d_ldap.ldap_driver.parameters%</argument>
        </service>

        <service id="fr3d_ldap.ldap_driver.zend" class="%fr3d_ldap.ldap_driver.zend.class%">
            <tag name="monolog.logger" channel="ldap_connection" />
            <argument type="service" id="fr3d_ldap.ldap_driver.zend.connection" />
            <argument type="service" id="logger" />
        </service>

        <!-- Legacy driver (Deprecated) -->
        <service id="fr3d_ldap.ldap_driver.legacy" class="%fr3d_ldap.ldap_driver.legacy.class%">
            <tag name="monolog.logger" channel="ldap_connection" />
            <argument>%fr3d_ldap.ldap_driver.parameters%</argument>
            <argument>%fr3d_ldap.ldap_driver.protocol.version%</argument>
            <argument type="service" id="logger" />
        </service>

    </services>

</container>
